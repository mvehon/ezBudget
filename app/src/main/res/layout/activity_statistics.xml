<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center"
    android:background="#ffb2b4aa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:background="#7cfff8f2">

        <Spinner
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height"
            android:layout_margin="5dp"
            android:id="@+id/spinnerTimeFrame"
            android:background="#7cfff8f2"
            android:layout_gravity="right" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/creditLbl"
                android:layout_margin="5dp"
                android:id="@+id/textViewTotalCreditLbl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_margin="5dp"
                android:id="@+id/textViewTotalCredit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_margin="5dp"
                android:id="@+id/textViewTotalCreditPerDay"/>

        </LinearLayout>

        <ListView
            android:layout_width="@dimen/table_width"
            android:layout_height="@dimen/stats_table_height"
            android:layout_margin="5dp"
            android:background="#99ffffff"
            android:id="@+id/listViewTotalCredit"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/debitLbl"
                android:id="@+id/textViewTotalDebitLbl"
                android:layout_margin="5dp"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_margin="5dp"
                android:id="@+id/textViewTotalDebit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_margin="5dp"
                android:id="@+id/textViewTotalDebitPerDay"/>
        </LinearLayout>

        <ListView
            android:layout_width="@dimen/table_width"
            android:layout_height="@dimen/stats_table_height"
            android:background="#99ffffff"
            android:layout_margin="5dp"
            android:id="@+id/listViewTotalDebit"/>
    </LinearLayout>

</RelativeLayout>
