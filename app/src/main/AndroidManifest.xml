<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arh.ezbudget">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddTransactionActivity"
            android:label="addTransaction"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".LoginCreateActivity"
            android:label="loginCreateActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".StatisticsActivity"
            android:label="statisticsActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".EditUser"
            android:label="Edit User"
            android:theme="@style/AppTheme"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
